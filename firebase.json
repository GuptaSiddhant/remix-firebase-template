{
  "functions": {
    "predeploy": "npm run build; rm functions/yarn.lock || true",
    "source": ".",
    "ignore": [
      "**/node_modules/**",
      "**/src/**",
      "**/public/**",
      "**/.firebase/**",
      "**/.cache/**"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "**/build/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 3000
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
