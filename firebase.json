{
  "functions": {
    "predeploy": "npm run build",
    "source": ".",
    "ignore": [
      "**/node_modules/**",
      "**/src/**",
      "**/public/**",
      "**/.firebase/**",
      "**/.cache/**",
      "**/.*",
      "tsconfig.json",
      "remix.config.js",
      "tailwind.config.js",
      "**/*.d.ts"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "/build/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 3000
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
