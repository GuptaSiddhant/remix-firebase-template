{
  "private": true,
  "name": "remix-firebase-app-template",
  "description": "",
  "license": "",
  "main": "firebase-functions.js",
  "scripts": {
    "build": "remix build",
    "prebuild": "tailwindcss -o ./app/styles/tailwind.css",
    "start": "firebase emulators:start",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\" \"npm run start\"",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev:remix": "remix watch",
    "deploy": "firebase deploy",
    "kill": "npx kill-port 5000 5001 8080 8085 4000 9229",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "firebase-admin": "^10.0.1",
    "firebase-functions": "^3.14.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "firebase-functions-test": "^0.2.0",
    "concurrently": "^7.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": "16"
  },
  "sideEffects": false
}
