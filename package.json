{
  "private": true,
  "name": "remix-firebase-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "start": "firebase emulators:start",
    "build": "npm run build:css; npm run build:remix:prod",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css",
    "build:remix:prod": "cross-env NODE_ENV=production remix build",
    "build:remix:dev": "cross-env NODE_ENV=development remix build",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\" ",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev:remix": "nodemon --watch app/ --ext tsx,ts,css,md,mdx,json --exec \"npm run build:remix:dev\"",
    "postinstall": "remix setup node",
    "kill": "npx kill-port 5000 5001 8080 8085 4000 9229"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "connect-livereload": "^0.6.1",
    "cross-env": "^7.0.3",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.15",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": "16"
  },
  "sideEffects": false
}
