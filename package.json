{
  "private": true,
  "name": "remix-firebase-template",
  "description": "",
  "license": "",
  "main": "firebase-functions.js",
  "scripts": {
    "build": "remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "clear": "rimraf .cache/ .firebase/ build/ public/build/ *.log",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\" \"npm run start\"",
    "dev:css": "npm run build:css --watch",
    "dev:remix": "remix watch",
    "postinstall": "remix setup node",
    "prebuild": "npm run build:css",
    "start": "firebase emulators:start"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "firebase-admin": "^10.0.1",
    "firebase-functions": "^3.14.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": "16"
  },
  "sideEffects": false
}
